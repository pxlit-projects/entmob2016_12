<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ProjectEnt_SensorTag.Views.Register">
    <StackLayout Orientation="Vertical" VerticalOptions="Center" Margin="0,5">
        <Label Text="Registreer" TextColor="Black" HorizontalTextAlignment="Center" FontSize="16" />
        <Entry Placeholder="Login" Text="{Binding User.Username}"/>
        <Entry Placeholder="Password" Text="{Binding User.Password}"/>
        <Button Command="{Binding Register, Converter=PasswordConverter}" Text="Registreer u"/>
    </StackLayout>
</ContentPage>