<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ProjectEnt_SensorTag.Views.SensorTagDetail">
    <ContentPage.Content>
        <StackLayout>
            <Image Source="sensorTag.jpg" VerticalOptions="Center" HorizontalOptions="CenterAndExpand" Margin="5" />
            <Label Text="Name of the Sensor " VerticalOptions="Center"  />
            <Label Text="{Binding Device.Name, Mode=TwoWay}" VerticalOptions="Center" />
            <Button Command="{Binding ConnectToService}" Text="Verbinding Maken" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>