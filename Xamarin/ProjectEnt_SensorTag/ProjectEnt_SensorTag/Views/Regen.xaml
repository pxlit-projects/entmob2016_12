<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ProjectEnt_SensorTag.Views.Regen">
    <ContentPage.Content>
        <StackLayout>
            <StackLayout Orientation="Horizontal">
                <Label Text="The temperature is: " />
                <Label Text="{Binding SensorTag.Temperature.Degree}" />
            </StackLayout>
            <Button x:Name="getInfoButton" Command="{Binding GetInfo,Mode=TwoWay}" Text="Activate Sensor" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>