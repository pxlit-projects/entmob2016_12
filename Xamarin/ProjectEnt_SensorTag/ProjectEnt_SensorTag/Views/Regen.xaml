<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ProjectEnt_SensorTag.Views.Regen">
    <ContentPage.Content>
        <StackLayout>
            <StackLayout Orientation="Horizontal" VerticalOptions="Center">
                <Label Text="The temperature is: " />
                <Label Text="{Binding SensorTag.TemperatureSensor.Degree}" />
            </StackLayout>
            <StackLayout Orientation="Horizontal" VerticalOptions="Center">
                <Label Text="The Humidity is: " />
                <Label Text="{Binding SensorTag.HumiditySensor.Humidity}" />
            </StackLayout>
            <!--<StackLayout Orientation="Horizontal" VerticalOptions="Center">
                <Label Text="The Barometer is: " />
                <Label Text="{Binding SensorTag.Barometer.Humidity}" />
            </StackLayout>-->
            <Button x:Name="getInfoButton" Command="{Binding GetInfo,Mode=TwoWay}" Text="{Binding InfoText, Mode=TwoWay}" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>